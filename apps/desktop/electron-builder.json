{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.amux.desktop",
  "productName": "Amux",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "out/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/presets",
      "to": "presets"
    },
    {
      "from": "resources/bin/${platform}-${arch}",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": "dmg",
    "artifactName": "${productName}-${version}-macos-${arch}.${ext}",
    "category": "public.app-category.developer-tools",
    "mergeASARs": false,
    "x64ArchFiles": "Contents/Resources/bin/cloudflared"
  },
  "dmg": {
    "artifactName": "${productName}-${version}-macos-${arch}.dmg"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-${version}-windows-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "${productName}-${version}-windows-${arch}-setup.exe"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
    "category": "Development",
    "maintainer": "isboyjc <me@isboyjc.com>"
  },
  "appImage": {
    "artifactName": "${productName}-${version}-linux-${arch}.AppImage"
  },
  "deb": {
    "artifactName": "${productName}-${version}-linux-${arch}.deb"
  }
}
